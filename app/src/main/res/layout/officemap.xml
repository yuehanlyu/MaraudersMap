<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="0dp"
android:paddingRight="0dp"
android:paddingTop="0dp"
android:paddingBottom="0dp"
android:background="@drawable/map_8f"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <!--<com.wifirecorder.CircleView-->
            <!--android:layout_width="52dp"-->
            <!--android:layout_height="355dp"-->
            <!--android:id="@+id/CirvleView"-->
            <!--android:layout_weight="1" />-->
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show distance"
        android:id="@+id/btnretrieve"
        android:onClick="onClickShowDistance"/>

    <Button
        android:id="@+id/btnshowcoordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:onClick="onClickShowCoordinates"
        android:text="Show my coordinates" />
</RelativeLayout>

